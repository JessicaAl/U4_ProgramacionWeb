@model Act2_RolesUsuario.Models.Maestro
@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers
@{
    Layout = "_Layout";
}
 <h1>Editar datos de docente</h1>
<form method="post" action="~/Home/EditarMaestro">
            <input type="hidden" asp-for="IdMaestro" />
            <br />
            <label>No. de control del maestro:</label>
            <input  type="number" asp-for="NumControl" required readonly />
            <br />
            <label>Nombre completo:</label>
            <input type="text" asp-for="Nombre" required />
            <br /><br />
            @Html.ValidationSummary()
            <input type="submit" value="Modificar" />
            <a href="~/Home/ListaMaestros">Cancelar</a>
</form>